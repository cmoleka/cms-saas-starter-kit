// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  // provider = "postgresql" // PostgreSQL for production
  // provider = "sqlite" // SQLite for development
  provider          = "postgresql" // SQLite for development
  // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url               = env("DATABASE_URL")
  directUrl         = env("VERCEL_POSTGRES_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("VERCEL_POSTGRES_URL_NON_POOLING") // used for migrations
}

model User {
  id             String   @id @default(cuid())
  externalId     String   @unique
  firstName      String?
  lastName       String?
  gender         String?
  birthday       String?
  emailAddress   String   @unique
  twitterId      String
  image          String?
  isBanned       Boolean  @default(false)
  isClerkDeleted Boolean  @default(false)
  createdAt      DateTime @default(now()) @map(name: "created_at")
  updatedAt      DateTime @default(now()) @map(name: "updated_at")

  @@map(name: "users")
}
